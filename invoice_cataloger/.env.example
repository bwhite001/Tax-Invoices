# =============================================================================
# Invoice Cataloger - API Configuration
# =============================================================================
# Copy this file to .env and fill in your API credentials
# IMPORTANT: Never commit .env file to version control!

# -----------------------------------------------------------------------------
# API Provider Selection
# -----------------------------------------------------------------------------
# Options: "lmstudio", "openai", "openrouter"
# Default: "lmstudio" (for local LM Studio)
API_PROVIDER=lmstudio

# -----------------------------------------------------------------------------
# LM Studio Configuration (Local AI)
# -----------------------------------------------------------------------------
# LM Studio endpoint for chat completions
LM_STUDIO_ENDPOINT=http://192.168.0.100:1234/v1/chat/completions
# LM Studio models endpoint
LM_STUDIO_MODELS_ENDPOINT=http://192.168.0.100:1234/v1/models
# Model name (usually "local-model" for LM Studio)
LM_STUDIO_MODEL=local-model

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
# Model options: gpt-4, gpt-4-turbo-preview, gpt-3.5-turbo, etc.
OPENAI_MODEL=gpt-4-turbo-preview
# OpenAI API base URL (usually default, change only if using proxy)
OPENAI_API_BASE=https://api.openai.com/v1

# -----------------------------------------------------------------------------
# OpenRouter Configuration
# -----------------------------------------------------------------------------
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key-here
# Model options: anthropic/claude-3.5-sonnet, openai/gpt-4, google/gemini-pro, etc.
# See full list at: https://openrouter.ai/models
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
# OpenRouter API base URL
OPENROUTER_API_BASE=https://openrouter.ai/api/v1
# Optional: Your app name for OpenRouter analytics
OPENROUTER_APP_NAME=Invoice-Cataloger

# -----------------------------------------------------------------------------
# LLM Parameters
# -----------------------------------------------------------------------------
# Temperature (0.0-1.0): Lower = more consistent, Higher = more creative
# Recommended: 0.1 for invoice extraction
LLM_TEMPERATURE=0.1
# Maximum tokens in response
LLM_MAX_TOKENS=3000
# Request timeout in seconds
LLM_TIMEOUT_SECONDS=120
# Number of retry attempts on failure
LLM_RETRY_ATTEMPTS=3
# Delay between retries in seconds
LLM_RETRY_DELAY_SECONDS=2

# -----------------------------------------------------------------------------
# Custom Prompt Configuration
# -----------------------------------------------------------------------------
# Set to "true" to use custom prompt, "false" to use default
USE_CUSTOM_PROMPT=false

# Custom extraction prompt (if USE_CUSTOM_PROMPT=true)
# Use {invoice_text} as placeholder for the invoice content
# Leave empty to use the optimized default prompt
CUSTOM_EXTRACTION_PROMPT=

# -----------------------------------------------------------------------------
# Financial Year Configuration
# -----------------------------------------------------------------------------
FINANCIAL_YEAR=2024-2025

# -----------------------------------------------------------------------------
# ATO Work From Home Configuration
# -----------------------------------------------------------------------------
# Number of days working from home per week
WORK_FROM_HOME_DAYS=3
# Total work days per week
TOTAL_WORK_DAYS=5
# ATO fixed rate per hour (2024-25 rate)
FIXED_RATE_HOURLY=0.70
# Your occupation for ATO purposes
OCCUPATION=Web / Software Developer
